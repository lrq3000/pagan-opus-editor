<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#30260e</item>
        <item name="colorPrimaryVariant">#453F2F</item>
        <item name="colorOnPrimary">#837d6e</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerBG">#e0e0e0</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="colorLeaf">#765bd5</item>
        <item name="colorLeafFocused">#967fe9</item>
        <item name="colorOnLeaf">#FFFFFF</item>
        <item name="colorLeafInactive">#b8b8b8</item>
        <item name="colorLeafFocusedInactive">#CCCCCC</item>
        <item name="colorLeafPressed">#11000000</item>

        <item name="mainBG">#e0e0e0</item>
        <item name="labelBG">?attr/colorOnPrimary</item>
        <item name="labelFG">?attr/colorPrimary</item>

        <item name="buttonBG">#FFFFFF</item>
        <item name="NumberSelectorDefaultBG">?attr/buttonBG</item>
        <item name="NumberSelectorSelectedBG">?attr/colorLeaf</item>
        <item name="NumberSelectorSelectedFG">?attr/colorOnLeaf</item>

        <item name="button_fg_default">?attr/colorPrimary</item>
        <item name="button_fg_pressed">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Kotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:itemBackground">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>