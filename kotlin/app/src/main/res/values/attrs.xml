<resources>
    <declare-styleable name="NumberSelector">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="active_bg" format="color"/>
        <attr name="active_fg" format="color"/>
        <attr name="button_fg" format="color"/>
        <attr name="button_bg" format="color"/>
    </declare-styleable>

    <declare-styleable name="NumberSelectorButton">
        <attr name="state_active" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="leaf">
        <attr name="state_focused" format="boolean" />
        <attr name="state_reflected" format="boolean" />
        <attr name="colorLeaf" format="color" />
        <attr name="colorOnLeaf" format="color" />
        <attr name="colorLeafInactive" format="color" />
        <attr name="colorOnLeafInactive" format="color" />
    </declare-styleable>

    <attr name="drawerBG" format="color" />
</resources>
