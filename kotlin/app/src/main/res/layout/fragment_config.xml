<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigFragment">

<LinearLayout
    android:id="@+id/llB"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/llProjectOptions"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="BPM:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:text="0"
            android:gravity="right"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="4"
        android:text="Active Channels"
        android:gravity="center" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cgEnabledChannels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.google.android.material.chip.ChipGroup>


</LinearLayout>

<LinearLayout
    android:id="@+id/llProjectOptions"
    android:orientation="horizontal"
    android:gravity="bottom"

    app:layout_constraintTop_toBottomOf="@+id/llB"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"

    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <Button
        android:id="@+id/btnCopyProject"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:ems="4"
        android:text="Copy" />
    <Button
        android:id="@+id/btnDeleteProject"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:ems="4"
        android:text="Delete" />
    <Button
        android:id="@+id/btnExportProject"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:ems="4"
        android:text="Export" />
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
