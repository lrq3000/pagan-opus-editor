<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/table_bg"
xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/btnChooseInstrument"
    android:textSize="20sp"
    android:gravity="center"
    android:background="@color/interface_bg"
    android:textColor="@color/interface_fg"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:layout_marginTop="5px"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="Instrument..." />

<TextView
    android:id="@+id/btnRemoveLine"
    android:textSize="20sp"
    android:gravity="center"
    android:background="@color/interface_bg"
    android:textColor="@color/interface_fg"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:layout_marginEnd="5px"
    android:layout_marginTop="5px"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnChooseInstrument"
    app:layout_constraintEnd_toStartOf="@+id/btnInsertLine"
    android:text="Remove Line"/>


<TextView
    android:id="@+id/btnInsertLine"
    android:textSize="20sp"
    android:gravity="center"
    android:background="@color/interface_bg"
    android:textColor="@color/interface_fg"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:layout_marginTop="5px"
    app:layout_constraintTop_toBottomOf="@+id/btnChooseInstrument"
    app:layout_constraintStart_toEndOf="@+id/btnRemoveLine"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Insert Line"/>

</androidx.constraintlayout.widget.ConstraintLayout>
