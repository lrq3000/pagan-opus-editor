<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/tvOpenBrace"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="["
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnValue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="2sp"
        android:paddingEnd="2sp"
        android:text=""
        android:backgroundTint="#adbeef"
        app:layout_constraintStart_toEndOf="@+id/tvOpenBrace"
        app:layout_constraintEnd_toStartOf="@+id/tvCloseBrace" />


    <LinearLayout
        android:id="@+id/llSubTree"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvOpenBrace"
        app:layout_constraintEnd_toStartOf="@+id/tvCloseBrace" />

    <TextView
        android:id="@+id/tvCloseBrace"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="]"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>