<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/btnRemoveBeat"
        android:theme="@style/button"
        android:background="@drawable/button"
        android:layout_marginEnd="5px"
        android:layout_marginStart="5px"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnInsertBeat"
        android:text="Remove Beat"/>
    <TextView
        android:id="@+id/btnInsertBeat"
        android:theme="@style/button"
        android:background="@drawable/button"
        android:layout_marginEnd="5px"
        android:layout_marginStart="5px"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/btnRemoveBeat"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Insert Beat"/>
</androidx.constraintlayout.widget.ConstraintLayout>
